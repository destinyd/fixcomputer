<%= simple_form_for(@problem) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :phone %>
    <%= f.input :name %>
    <%= f.input :desc %>
    <%= f.input :address %>
    <%= f.input :address_plus %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
